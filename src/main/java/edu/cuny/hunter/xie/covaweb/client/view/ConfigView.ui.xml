<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:upload='urn:import:gwtupload.client'
	xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

	<ui:style>
		.right {
			float: right;
		}
		
		.left {
			float: left;
			position: relative;
			top: -14px;
			left: 135px;
		}
	</ui:style>

	<g:FlowPanel width="400px">
		<g:FlowPanel>
			<g:Label text="Paste in FASTA file or" />
			<upload:MultiUploader fileInputSize='40'
				maximumFiles='1' ui:field='fastaUploader' type='ANCHOR'
				styleName='{style.left}' />
			<g:TextArea ui:field="fastaTextArea" width="400px" height="150px" />
		</g:FlowPanel>
		<g:DisclosurePanel>
			<g:header>Advanced</g:header>
			<g:FlowPanel>
				<g:Label text="Paste in Multiple Sequence Alignment." />
				<g:TextArea ui:field="msaTextArea" height="150px" width="380px" />
				<g:Label text="Paste in PDB Structure." />
				<g:TextArea ui:field="pdbTextArea" height="150px" width="380px" />
			</g:FlowPanel>
		</g:DisclosurePanel>
		<g:Button ui:field="fastaSubmitButton" text="Submit" styleName="{style.right}"/>
		<g:Label text="" ui:field="responseLabel"/>
	</g:FlowPanel>
	
</ui:UiBinder>
